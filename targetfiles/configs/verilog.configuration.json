{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["begin", "end"],
		["case", "endcase"],
		["casex", "endcase"],
		["casez", "endcase"],
		["config", "endconfig"],
		["fork", "join"],
		["function", "endfunction"],
		["generate", "endgenerate"],
		["macromodule", "endmodule"],
		["module", "endmodule"],
		["primitive", "endprimitive"],
		["specify", "endspecify"],
		["table", "endtable"],
		["task", "endtask"],
		["`if", "`endif"],
		["`for", "`endfor"]
	],

	"autoClosingPairs": [
		{"open":"(", "close":")"},
		{"open":"[", "close":"]"},
		{"open":"{", "close":"}"},
		{"open":"\"", "close":"\"", "notIn":["string"]}
	],

	"folding": {
		"offSide": true,
		"markers": {
			"start": "^\\s*[//]*region",
			"end": "^\\s*[//]*endregion"
		}
	}
}